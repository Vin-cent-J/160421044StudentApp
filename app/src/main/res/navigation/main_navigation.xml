<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/StudentListFragment">

    <fragment
        android:id="@+id/StudentListFragment"
        android:name="com.normal.studentapp.view.StudentListFragment"
        android:label="fragment_student_list"
        tools:layout="@layout/fragment_student_list" >
        <action
            android:id="@+id/ActionDetailFragment"
            app:destination="@id/StudentDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/StudentDetailFragment"
        android:name="com.normal.studentapp.view.StudentDetailFragment"
        android:label="fragment_student_detail"
        tools:layout="@layout/fragment_student_detail" >
        <argument
            android:name="studentid"
            app:argType="string" />
    </fragment>
</navigation>